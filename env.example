# Environment Variables for Proxy Auth Next.js App
# Copy this file to .env.local and fill in your values

# Authentication Keys
NEXT_PUBLIC_AUTH_UI_ENCODE_KEY=your_ui_encode_key_here
NEXT_PUBLIC_AUTH_UI_IV_KEY=your_ui_iv_key_here
NEXT_PUBLIC_AUTH_API_ENCODE_KEY=your_api_encode_key_here
NEXT_PUBLIC_AUTH_API_IV_KEY=your_api_iv_key_here

# hCaptcha Configuration
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key_here

# OTP Configuration
NEXT_PUBLIC_SEND_OTP_AUTH_KEY=your_send_otp_auth_key_here

# API Configuration (optional - defaults are provided in environment.ts)
# NEXT_PUBLIC_API_URL=https://api.msg91.com/api
# NEXT_PUBLIC_BASE_URL=https://proxy.msg91.com

# Development vs Production
# NODE_ENV=development  # or production
